{
  "plugins": {
    "release-it-pnpm": {}
  },
  "git": {
    "commitMessage": "Release reactive-load-script ${version}",
    "tagName": "v${version}"
  },
  "github": {
    "release": true,
    "tokenRef": "GITHUB_AUTH"
  },
  "plugins": {
    "@release-it-plugins/lerna-changelog": {
      "infile": "CHANGELOG.md",
      "launchEditor": false
    },
    "@release-it-plugins/workspaces": {
      "publish": false,
      "workspaces": [
        "reactive-load-script"
      ],
      "additionalManifests": {
        "dependencyUpdates": [
          "package.json",
          "test-app/package.json"
        ],
        "versionUpdates": [
          "package.json",
          "test-app/package.json"
        ]
      }
    }
  }
}
